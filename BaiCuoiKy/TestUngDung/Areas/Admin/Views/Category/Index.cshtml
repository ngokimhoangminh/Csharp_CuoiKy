@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<ModelEF.Model.CategoryProduct>

@{
    ViewBag.Title = "Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-align-center"></i>&nbsp; Quản Lý Danh Mục
}

@using (Html.BeginForm("Index", "Category", FormMethod.Post))
{
    <div class="col-lg-12 form-group row pt-3" style="padding-left:32px;">
        <div class="col-md-6" style="padding-left:0px;">
            @Html.ActionLink("Tạo mới", "Create", "Category", new { @class = "btn btn-danger" })
        </div>
        <div class="col-md-4">
            <input type="text" value="@ViewBag.searchString" name="searchString" placeholder="Nhập từ khóa tìm kiếm" class="form-control" style="cursor:pointer" />
        </div>
        <div class="col-md-2">
            <input type="submit" vaule="Tìm kiếm" class="btn btn-default" style="background: darkblue; color: aliceblue; outline: auto;" />
        </div>
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table table-bordered">
        <tr style=" background: brown; color: aliceblue;font-family: initial;font-size: 13px;">
            <th>
                STT
            </th>
            <th>
                Danh Mục
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Trạng Thái
            </th>
            <th>Hành Động</th>
            <th>

            </th>
        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
            <tr id="row_@item.category_id">
                <td>@i</td>
                <td>
                    @item.category_name
                </td>
                <td>
                    @item.category_des
                </td>
                @if (@item.category_status == 1)
                {
                    <td>
                        Hiển Thị
                    </td>
                }

                @if (@item.category_status == 0)
                {
                    <td>
                        Ẩn
                    </td>
                }
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = @item.category_id })" class="btn btn-primary" style="font-size:12px;"><i class="fa fa-edit"></i></a>
                    <a onclick="PopupDelete(@item.category_id)" class="btn btn-danger" style="cursor:pointer; font-size:12px;"><i class="fa fa-trash-o"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("Index","Category")"><i class="fa fa-refresh"></i></a>
                </td>
            </tr>
            i++;
        }

    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
</div>
<script>
    function PopupDelete(id) {
        Swal.fire({
            title: 'Bạn có chắc chắn xóa danh mục này không',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy',
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/Category/Delete",
                    data: { id: id },
                    success: function (result) {
                        Swal.fire(
                            'Thành Công!',
                            'Bạn đã xóa thành công',
                            'success'
                        );
                        $("#row_" + id).remove();

                    }
                })

            }
        })
    }
</script>
